<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootContainer" stylesheets="@dashboard.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentnest.controllers.AdminDashboardController">
    <left>
        <VBox styleClass="sidebar">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>
            <Label fx:id="welcomeLabel" styleClass="welcome-label" text="Welcome, Admin!" VBox.vgrow="NEVER">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
                <padding>
                    <Insets bottom="20"/>
                </padding>
            </Label>
            <Button fx:id="usersButton" onAction="#handleShowUsers" text="Users" maxWidth="1.7976931348623157E308"/>
            <Button fx:id="roomsButton" onAction="#handleShowRooms" text="Rooms" maxWidth="1.7976931348623157E308"/>
            <Button fx:id="statisticsButton" onAction="#handleShowStats" text="Statistics" maxWidth="1.7976931348623157E308"/>
            <Button fx:id="feedbackButton" onAction="#handleShowFeedback" text="Feedback" maxWidth="1.7976931348623157E308"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button fx:id="themeToggleButton" onAction="#handleThemeToggle" text="ðŸŒ™" styleClass="theme-toggle-button" maxWidth="1.7976931348623157E308"/>
            <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout" maxWidth="1.7976931348623157E308" styleClass="logout-button"/>
        </VBox>
    </left>
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Users">
                <content>
                    <VBox styleClass="tab-content-pane">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Users Management" styleClass="header-label"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button fx:id="refreshUsersButton" onAction="#handleRefreshUsers" text="Refresh"/>
                            <Button fx:id="deleteUserButton" onAction="#handleDeleteUser" text="Delete User" styleClass="delete-button"/>
                        </HBox>
                        <TableView fx:id="usersTable" VBox.vgrow="ALWAYS" editable="false">
                            <columns>
                                <TableColumn fx:id="nameColumn" text="Name"/>
                                <TableColumn fx:id="userTypeColumn" text="User Type"/>
                                <TableColumn fx:id="usernameColumn" text="Username"/>
                                <TableColumn fx:id="phoneColumn" text="Phone"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </content>
            </Tab>
            <Tab text="Rooms">
                <content>
                    <VBox styleClass="tab-content-pane">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Rooms Management" styleClass="header-label"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button fx:id="refreshRoomsButton" onAction="#handleRefreshRooms" text="Refresh"/>
                            <Button fx:id="deleteRoomButton" onAction="#handleDeleteRoom" text="Delete Room" styleClass="delete-button"/>
                        </HBox>
                        <TableView fx:id="roomsTable" VBox.vgrow="ALWAYS" editable="false">
                            <columns>
                                <TableColumn fx:id="roomLocationColumn" text="Location"/>
                                <TableColumn fx:id="roomPriceColumn" text="Price"/>
                                <TableColumn fx:id="roomOwnerColumn" text="Owner Name"/>
                                <TableColumn fx:id="roomTypeColumn" text="Room Type"/>
                                <TableColumn fx:id="roomContactColumn" text="Contact Info"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </content>
            </Tab>
            <Tab text="Statistics">
                <content>
                    <GridPane alignment="TOP_CENTER" hgap="20" vgap="20" styleClass="stats-grid-pane">
                        <padding>
                            <Insets top="40" right="40" bottom="40" left="40"/>
                        </padding>
                        <VBox styleClass="stats-card">
                            <Label text="Total Users" styleClass="stats-title"/>
                            <Label fx:id="userCountLabel" text="0" styleClass="stats-value"/>
                        </VBox>
                        <VBox styleClass="stats-card" GridPane.columnIndex="1">
                            <Label text="Total Rooms" styleClass="stats-title"/>
                            <Label fx:id="roomCountLabel" text="0" styleClass="stats-value"/>
                        </VBox>
                        <VBox styleClass="stats-card" GridPane.rowIndex="1">
                            <Label text="House Owners" styleClass="stats-title"/>
                            <Label fx:id="ownerCountLabel" text="0" styleClass="stats-value"/>
                        </VBox>
                        <VBox styleClass="stats-card" GridPane.rowIndex="1" GridPane.columnIndex="1">
                            <Label text="Students" styleClass="stats-title"/>
                            <Label fx:id="studentCountLabel" text="0" styleClass="stats-value"/>
                        </VBox>
                        <VBox styleClass="stats-card" GridPane.rowIndex="2">
                            <Label text="Users this month" styleClass="stats-title"/>
                            <Label fx:id="monthlyUsersLabel" text="0" styleClass="stats-value"/>
                        </VBox>
                        <VBox styleClass="stats-card" GridPane.rowIndex="2" GridPane.columnIndex="1">
                            <Label text="Rooms this month" styleClass="stats-title"/>
                            <Label fx:id="monthlyRoomsLabel" text="0" styleClass="stats-value"/>
                        </VBox>
                        <VBox alignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="3">
                            <PieChart fx:id="userStatsChart" title="User Distribution" styleClass="user-stats-chart"/>
                        </VBox>
                    </GridPane>
                </content>
            </Tab>
            <Tab text="Feedback">
                <content>
                    <VBox styleClass="tab-content-pane">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Feedback &amp; Issues" styleClass="header-label"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button fx:id="refreshFeedbackButton" onAction="#handleRefreshFeedback" text="Refresh"/>
                            <Button fx:id="markResolvedButton" onAction="#handleMarkResolved" text="Mark as Resolved" styleClass="resolve-button"/>
                            <Button fx:id="deleteFeedbackButton" onAction="#handleDeleteFeedback" text="Delete" styleClass="delete-button"/>
                        </HBox>
                        <TableView fx:id="feedbackTable" VBox.vgrow="ALWAYS" editable="false">
                            <columns>
                                <TableColumn fx:id="feedbackUserColumn" text="User"/>
                                <TableColumn fx:id="feedbackTextColumn" text="Feedback"/>
                                <TableColumn fx:id="feedbackDateColumn" text="Date"/>
                                <TableColumn fx:id="feedbackStatusColumn" text="Status"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </content>
            </Tab>
        </TabPane>
    </center>
</BorderPane>